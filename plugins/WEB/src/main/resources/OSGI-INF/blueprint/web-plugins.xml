<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <cm:property-placeholder persistent-id="org.opennms.plugins.web" update-strategy="reload">
    <cm:default-properties>
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="webDetector" class="org.opennms.poc.web.WebDetector" init-method="init"/>

  <service ref="webDetector" interface="org.opennms.poc.plugin.api.ServiceDetector">
    <service-properties>
      <entry key="detector.name" value="WEBDetector"/>
    </service-properties>
  </service>

  <bean id="webMonitor" class="org.opennms.poc.icmp.WebMonitor"/>

  <service ref="webMonitor" interface="org.opennms.poc.plugin.api.ServiceMonitor">
    <service-properties>
      <entry key="monitor.name" value="WEBMonitor"/>
    </service-properties>
  </service>

</blueprint>
