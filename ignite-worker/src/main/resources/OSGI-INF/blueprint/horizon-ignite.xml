<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
  xmlns:camel="http://camel.apache.org/schema/blueprint"
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <cm:property-placeholder persistent-id="org.opennms.poc.ignite.worker" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="useKubernetes" value="false"/>
      <cm:property name="kubernetes.uri" value="someserver"/>
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="workflowRepository" class="org.opennms.poc.ignite.worker.workflows.WorkflowRepository"/>

  <bean id="workerIgniteConfiguration" class="org.opennms.poc.ignite.worker.ignite.WorkerIgniteConfiguration">
    <argument value="${useKubernetes}"/>
    <argument value="${kubernetes.uri}"/>
  </bean>

  <bean id="ignite" class="org.opennms.poc.ignite.worker.ignite.IgnitionFactory" factory-method="create">
    <argument ref="workerIgniteConfiguration"/>
  </bean>

  <bean id="ignitePocRestServiceImpl" class="org.opennms.poc.ignite.worker.rest.IgniteWorkerRestControllerImpl" scope="singleton">
    <argument ref="ignite"/>
    <argument ref="workflowRepository"/>
  </bean>

  <service id="ignitePocRestService" ref="ignitePocRestServiceImpl" interface="org.opennms.poc.ignite.worker.rest.IgniteWorkerRestController">
    <service-properties>
      <entry key="osgi.jaxrs.resource" value="true"/>
    </service-properties>
  </service>

<!--  ========= Detector whiteboard and plugins ==========-->

  <bean id="detectorRegistry" class="org.opennms.poc.ignite.worker.ignite.detectors.DetectorRegistryImpl">
    <argument ref="blueprintBundleContext"/>
  </bean>

  <bean id="annotationScanner" class="org.apache.aries.blueprint.annotation.impl.BlueprintAnnotationScannerImpl">
    <argument ref="blueprintBundleContexst"/>
  </bean>

  <service id="scannerImpl" ref="annotationScanner" interface="org.apache.aries.blueprint.annotation.service.BlueprintAnnotationScanner"/>

<!--  <service id="detectorRegistry" ref="detectorRegistryImpl" interface="org.opennms.poc.ignite.worker.ignite.detectors.DetectorRegistry"/>-->

<!--  Each detector has a bean impl and publishes itself as a service with Detector Interface (determined by the whiteboard impl above)-->
<!--  in production, detectors could each live in their own bundle and have a dedicated feature def for installing ad hoc-->
  <bean id="sampleDetector" class="org.opennms.poc.ignite.worker.ignite.detectors.SampleDetector"/>

  <service id="sampleDetectorService" ref="sampleDetector" interface="org.opennms.poc.ignite.worker.ignite.detectors.Detector">
    <service-properties>
      <entry key="detector.name" value="SampleDetector"/>
    </service-properties>
  </service>

</blueprint>
